INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

prefix = @prefix@
exec_prefix = @exec_prefix@

SHAREDOPT = -shared
LIBDIR = $(prefix)/lib .
INCDIR = $(prefix)/include
MANDIR	= $(prefix)/man/man3
SHELL = /bin/sh
EXTRA_LIBS = -lfcgi -ldl -lz

INC = -I .
FLAGS = -Wall -fpic

OBJS = *.o

.c.o: $(CC) $(FLAGS) -c $<

INC = -L/usr/local/lib -L/usr/lib -I/usr/include/glib-2.0/  -I/usr/lib/glib-2.0/include

all: main libff.a blog

blog: blog.c
	gcc -shared blog.c -lff -o controllers/blog.so -L .

main: main.c route.c util.c
	gcc -o ff -g main.c route.c util.c $(EXTRA_LIBS) $(INC) -Wall

libff.a: ccgi.o template.o array.o $(CRYPT)
	ar r libff.a ccgi.o template.o array.o $(CRYPT)
	ranlib libff.a

ccgi.o: ccgi.c ccgi.h

prefork.o: prefork.c

crypt.o: crypt.c ccgi.h

test: libccgi.a
	cd t; make

clean:
	find ./ -name '*.*o' -exec rm -f {} \;
	find ./ -name '*.a' -exec rm -f {} \;

